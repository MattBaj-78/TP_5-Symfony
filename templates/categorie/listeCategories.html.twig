{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1 class="text-center pt-2">Liste des catégories</h1>

    <div class="row">
        {% for laCategorie in lesCategories %}
            <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3 mx-auto">
                <div class="card mb-3">
                    <h4 class="card-header"> {{ laCategorie.libelle }} </h4>

                    <img style="font-size:1.125rem;text-anchor:middle" class="avatar mx-auto my-3" src=" {{asset(laCategorie.image)}} " max-width="200px" height="auto" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180">
                        <rect width="100%" height="100%" fill="#868e96"></rect>
                        <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                    </img>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"> {{ laCategorie.description }} </li>
                    </ul>

                    <div class="card-body">
                        <a href=" {{path("ficheCategorie", {'id': laCategorie.id})}} " class="btn btn-success btn-block text-center">Détails ...</a>
                    </div>

                    <h5 class="card-header"> <span class="badge badge-warning"> {{ laCategorie.contacts|length }} contacts</span> </h5>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}